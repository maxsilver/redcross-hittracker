<table class="users">
  <thead>
    <th class="name">Name</th>
    <th class="email">Email</th>
    <th class="role">Role</th>
  </thead>
  <tbody>
  <% @users.each do |user| %>
  <tr class="<%= cycle :even, :odd %>">
    <td>
      <% if current_user.admin? %>
        <%= link_to name_of(user), edit_user_path(user) %>
      <% else %>
        <%= name_of(user) %>
      <% end %>
    </td>
    <td><%= mail_to user.email %></td>
    <td><%= user.role %></td>
  </tr>
  <% end %>
  </tbody>
</table>