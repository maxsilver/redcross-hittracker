<table class="reporters">
  <thead>
    <th class="title">Reporter</th>
    <th class="hits">Hits</th>
  </thead>
  <tbody>
    <tr class="filters">
      <td class="title"><%= text_field_tag :title, nil, :placeholder => "All Press Releases" %></td>

      <% if !PressRelease.earliest.nil? && !PressRelease.latest.nil? %>
        <td class="released_on">
          <%= text_field_tag :start_on, PressRelease.earliest.released_on.to_s(:db), :class => "start_on" %> -
          <%= text_field_tag :end_on, PressRelease.latest.released_on.to_s(:db), :class => "end_on" %>
        </td>
      <% end %>

    </tr>
    <% @reporters.each do |reporter| %>
    <tr class="<%= cycle :even, :odd %>">
      <td><%= link_to reporter.name, edit_reporter_path(reporter) %></td>
      <td class="hits"><%= reporter.hits.count %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<% reset_cycle %>

<table class="media_outlets">
  <thead>
    <th class="title">Media Outlet</th>
    <th class="hits">Hits</th>
  </thead>
  <tbody>
    <tr class="filters">
      <td class="title"><%= text_field_tag :title, nil, :placeholder => "All Press Releases" %></td>
      <% if !PressRelease.earliest.nil? && !PressRelease.latest.nil? %>
      <td class="released_on">
        <%= text_field_tag :start_on, PressRelease.earliest.released_on.to_s(:db), :class => "start_on" %> -
        <%= text_field_tag :end_on, PressRelease.latest.released_on.to_s(:db), :class => "end_on" %>
      </td>
      <% end %>
    </tr>
    <% @media_outlets.each do |media_outlet| %>
    <tr class="<%= cycle :even, :odd %>">
      <td><%= link_to media_outlet.name, edit_media_outlet_path(media_outlet) %></td>
      <td class="hits"><%= media_outlet.hits.count %></td>
    </tr>
    <% end %>
  </tbody>
</table>
