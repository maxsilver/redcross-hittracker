<div>
  <%= form_for :locations do |f| %>

    <span>Time :</span>
    <%= f.text_field :start_time, :class => "datetime" %>
    <%= f.text_field :end_time, :class => "datetime" %>

    <%= f.submit "Search" %>
  <% end %>
</div>

<div class="locations">
  <% @regions.each do |region| %>
    <div class="region">
      <h3 class="name"><%= region.name %></h3>
      <h3 class="count"><%= region.hits.during(@date_range).count %></h3>
    </div>
    <table class="chapters">
      <tbody>
        <% region.chapters.each do |chapter| %>
        <tr class="chapter">
          <td class="name"><%= chapter.name %></td>
          <td class="count"><%= chapter.hits.during(@date_range).count %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>