<%= form_for hit do |f| %>

  <div class="errors">
    <%= hit.errors.full_messages %>
  </div>
  
  
  <div>
    <%= f.label :title %><br />
    <%= f.text_field :title, :class => "title" %>
  </div>
  
  <div>
    <%= f.label :reported_on %><br />
    <%= f.text_field :reported_on, :class => "reported_on text" %>
  </div>
  
  <div>
    <%= f.label :media_outlet_id %><br />
    <%= f.select :media_outlet_id, options_from_collection_for_select(@media_outlets, "id", "name"), :class => "outlet text" %>
  </div>
  
  <div>
    <%= f.label :reporter_id %><br />
    <%= f.select :reporter_id, options_from_collection_for_select(@reporters, "id", "name"), :class => "outlet text" %>
  </div>
  
  <div>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  
  <div>
    <%= f.label :tag_list, "Tags" %><br />
    <%= f.text_field :tag_list, :class => "tags text" %>
  </div>
  
  <div>
    <%= f.label :tone %><br />
    <%= f.select :tone, [["Positive","positive"],["Neutral","neutral"],["Negative","negative"]], :include_blank => true %>
  </div>
  
  <div>
    <%= f.label :chapter_id %><br />
    <%= f.select :chapter_id, options_from_collection_for_select(@chapters, "id", "name"), :class => "outlet text" %>
  </div>

  <div>
    <%= f.label :press_release_id %><br />
    <%= f.select :press_release_id, options_from_collection_for_select(@press_releases, "id", "title"), :class => "outlet text" %>
  </div>
  
  <div>
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </div>
  
  <div>
    <%= link_to "cancel", hits_path %>
    <%= f.submit "Save" %>
  </div>
<% end %>