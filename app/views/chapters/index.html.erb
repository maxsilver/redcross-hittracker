<h2>Chapters</h2>

<table>
  <thead>
    <th>Name</th>
    <th>Updated At</th>
    <th>Created At</th>
  </thead>
  <tbody>
    <% @chapters.each do |chapter| %>
    <tr>
      <td><%= link_to chapter.name, edit_chapter_path(chapter) %></td>
      <td><%= chapter.updated_at %></td>
      <td><%= chapter.created_at %></td>
    </tr>
    <% end %>
  </tbody>
</table>