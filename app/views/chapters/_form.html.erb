<%= form_for chapter do |f| %>

  <div class="errors">
    <%= chapter.errors.full_messages %>
  </div>
  
  <%= f.hidden_field :region_id %>
  
  <div>
    <%= f.label :name %><br />
    <%= f.text_field :name, :class => "title" %>
  </div>
  
  <div>
    <%= link_to "cancel", locations_path %>
    <%= f.submit "Save" %>
  </div>
<% end %>