<h3><strong><%= @reporter.name %></strong></h3>
<%= link_to "Edit this reporter", edit_reporter_path(@reporter) %>

<br /><br />

<ul>
  <li>Phone : <%= @reporter.phone %></li>
  <li>Email : <%= @reporter.email %></li>
  <li>Fax : <%= @reporter.fax %></li>
  <li>Comment : <%= @reporter.comment %></li>
</ul>

<br /><br />

<h4>Media Hits</h4>
<ul>
  <% @reporter.hits.each do |hit| %>
    <li><%= link_to hit.title, hit %></li>
  <% end %>
</ul>