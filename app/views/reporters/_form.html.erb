<%= form_for reporter do |f| %>

  <div class="errors">
    <%= reporter.errors.full_messages %>
  </div>
  
  <%= f.hidden_field :user_id, :value => current_user.id %>
  
  <div>
    <%= f.label :name %><br />
    <%= f.text_field :name, :class => "title" %>
  </div>
  
  <div>
    <%= f.label :phone %><br />
    <%= f.text_field :phone, :class => "text" %>
  </div>
  
  <div>
    <%= f.label :email %><br />
    <%= f.text_field :email, :class => "title" %>
  </div>
  
  <div>
    <%= f.label :fax %><br />
    <%= f.text_field :fax, :class => "title" %>
  </div>
  
  <div>
    <%= f.label :comment %><br />
    <%= f.text_area :comment, :class => "title" %>
  </div>
  
  <div>
    <%= link_to "cancel", media_path %>
    <%= f.submit "Save" %>
  </div>
<% end %>